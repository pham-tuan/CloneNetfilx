<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llItemFIlm"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#424242"
    android:layout_marginTop="4dp">

    <ImageView
        android:id="@+id/imgFilm"
        android:layout_width="146dp"
        android:layout_height="76dp"
        android:background="@drawable/rectanglemot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvFilmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="Citation"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgFilm"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/baseline_play_circle_outline_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="6dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>